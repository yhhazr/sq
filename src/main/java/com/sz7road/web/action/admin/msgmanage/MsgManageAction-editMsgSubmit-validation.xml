<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	
	<field name="msgInfo.ipAddress">
		<field-validator type="regex">
			<param name="expression">((?:(?:25[0-5]|2[0-4]\d|[01]?\d?\d)\.){3}(?:25[0-5]|2[0-4]\d|[01]?\d?\d))</param>
			<message key="admin.msg.validate.ipAddress.type.error"></message>
		</field-validator>
	</field>
	
	<field name="msgInfo.support">
		<field-validator type="regex">
			<param name="expression">([0-9]{0,7})</param>
			<message key="admin.msg.validate.msgSupport.type.error"></message>
		</field-validator>
	</field>
	
	<field name="msgInfo.msgContent">
		<field-validator type="stringlength">
			<param name="trim">true</param>
			<param name="minLength">0</param>
			<param name="maxLength">150</param>
			<message key="admin.msg.validate.msgContent.length.error"></message>
		</field-validator>
	</field>

</validators>