<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="video" namespace="/videoManage" extends="default">
		<!-- 视频列表 -->
		<action name="queryVideos" class="com.sz7road.web.action.admin.videomanage.VideoManageAction" method="getAllVideoInfoList">
			<result name="success" type="tiles">viewVideoList</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>
		<!-- 添加视频 -->
		<action name="createVideoForm" class="com.sz7road.web.action.admin.videomanage.VideoManageAction" method="addNewVideo">
			<result name="success" type="tiles">addVideoPage</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>
		<!-- 添加视频提交 -->
		<action name="createVideoSubmit" class="com.sz7road.web.action.admin.videomanage.VideoManageAction" method="createVideoSubmit">
			<result name="input" type="tiles">addVideoPage</result>
			<result name="success" type="redirectAction">queryVideos</result>
			<interceptor-ref name="fileUpload">
                  <param name="allowedTypes">
                     image/jpeg,image/pjpeg,image/x-ms-bmp,image/png
                  </param>
                  <param name="maximumSize">20480</param>
            </interceptor-ref>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>
		<!-- 视频编辑 -->
		<action name="editVideoForm" class="com.sz7road.web.action.admin.videomanage.VideoManageAction" method="editVideoInfo">
			<result name="success" type="tiles">editVideoPage</result>
			<result name="input" type="tiles">editVideoPage</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>
		<!-- 编辑视频提交 -->
		<action name="editVideoSubmit" class="com.sz7road.web.action.admin.videomanage.VideoManageAction" method="editVideoSubmit">
			<result name="success" type="redirectAction">queryVideos</result>
			<result name="input" type="tiles">editVideoPage</result>
			<interceptor-ref name="fileUpload">
                  <param name="allowedTypes">
                     image/jpeg,image/pjpeg,image/x-ms-bmp,image/png
                  </param>
                  <param name="maximumSize">20480</param>
            </interceptor-ref>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>
		<!-- 视频删除 -->
		<action name="deleteVideoSubmit" class="com.sz7road.web.action.admin.videomanage.VideoManageAction" method="deleteVideoInfoSubmit">
			<result name="success" type="redirectAction">queryVideos</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>
		
	</package>
</struts>