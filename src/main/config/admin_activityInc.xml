<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="activityIncManage" namespace="/activityIncManage" extends="default">
		<action name="queryAllActivityInc"
			class="com.sz7road.web.action.admin.activitymanage.ActivityIntroductionAction"
			method="queryActivityInc">
			<result name="success" type="tiles">adminQueryActivityInc</result>
			<result name="input" type="tiles">adminHomePage</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>

		<action name="createActivityInc">
			<result name="success" type="tiles">adminAddActivityInc</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>

		<action name="addActivityInc"
			class="com.sz7road.web.action.admin.activitymanage.ActivityIntroductionAction"
			method="createActivityIncSubmit">
			<result type="redirectAction">queryAllActivityInc</result>
			<result name="input" type="tiles">adminAddActivityInc</result>
			<interceptor-ref name="fileUpload">
            	<param name="allowedTypes">
            		image/jpeg,image/pjpeg,image/x-ms-bmp,image/png
            	</param>
            	<param name="maximumSize">81920</param>
            </interceptor-ref>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>

		<action name="queryActivityInc"
			class="com.sz7road.web.action.admin.activitymanage.ActivityIntroductionAction"
			method="queryActivityIncById">
			<result name="success" type="tiles">adminEditActivityInc</result>
			<result name="input" type="tiles">adminHomePage</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>

		<action name="editActivityInc"
			class="com.sz7road.web.action.admin.activitymanage.ActivityIntroductionAction"
			method="editActivityIncSubmit">
			<result type="redirectAction">queryAllActivityInc</result>
			<result name="input" type="tiles">adminEditActivityInc</result>
			<interceptor-ref name="fileUpload">
            	<param name="allowedTypes">
            		image/jpeg,image/pjpeg,image/x-ms-bmp,image/png
            	</param>
            	<param name="maximumSize">81920</param>
            </interceptor-ref>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>

		<action name="deleteActivityInc"
			class="com.sz7road.web.action.admin.activitymanage.ActivityIntroductionAction"
			method="deleteActivityInc">
			<result type="redirectAction">queryAllActivityInc</result>
			<result name="input" type="redirectAction">queryAllActivityInc</result>
			<interceptor-ref name="globalInterceptorStack"></interceptor-ref>
		</action>
	</package>
</struts>
